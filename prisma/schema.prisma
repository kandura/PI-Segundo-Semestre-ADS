generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/**********************
 * MODELOS PRINCIPAIS
 **********************/

model Cliente {
  id            Int            @id @default(autoincrement())
  nome          String
  criadoEm      DateTime       @default(now())
  musicRequests PedidoMusica[]
}

model Mesa {
  id        Int             @id @default(autoincrement())
  codigo    String          @unique
  nome      String?
  ativa     Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  sessoes   SessaoCliente[]
}

model SessaoCliente {
  id             Int       @id @default(autoincrement())
  nomeCliente    String
  mesaId         Int
  ip             String?
  userAgent      String?
  status         String    @default("ATIVA")
  createdAt      DateTime  @default(now())
  lastActivityAt DateTime  @default(now())
  endedAt        DateTime?
  mesa           Mesa      @relation(fields: [mesaId], references: [id])
}

model SpotifyAuth {
  id              Int       @id @default(autoincrement())
  accessToken     String
  refreshToken    String    @unique
  tokenType       String    @default("Bearer")
  scope           String?
  expiresAt       DateTime
  tokenObtainedAt DateTime  @default(now())
  createdAt       DateTime  @default(now())
}

model Music {
  id         Int              @id @default(autoincrement())
  spotifyId  String           @unique
  titulo     String
  artista    String
  album      String?
  coverUrl   String?
  createdAt  DateTime         @default(now())
  pedidos    PedidoMusica[]

  // üëá lado inverso da rela√ß√£o com PlaybackQueue
  queueEntries PlaybackQueue[]
}

/**********************
 * RELA√á√ÉO 1:1 CORRIGIDA
 **********************/

model PedidoMusica {
  id        Int          @id @default(autoincrement())
  clienteId Int
  musicId   Int
  mesaId    Int
  queueId   Int?         @unique  // ‚Üê OBRIGAT√ìRIO em 1:1
  status    PedidoStatus @default(PENDENTE)
  createdAt DateTime     @default(now())

  cliente   Cliente      @relation(fields: [clienteId], references: [id])
  music     Music        @relation(fields: [musicId], references: [id])

  // Lado DEFINIDOR da rela√ß√£o 1:1
  queue     PlaybackQueue? @relation("PedidoToQueue", fields: [queueId], references: [id])
}

model PlaybackQueue {
  id         Int            @id @default(autoincrement())
  musicId    Int
  addedAt    DateTime       @default(now())
  playedAt   DateTime?
  order      Int            @default(0)
  status     QueueStatus    @default(NA_FILA)

  music      Music          @relation(fields: [musicId], references: [id])

  // rela√ß√£o 1:1 com PedidoMusica
  pedido     PedidoMusica?  @relation("PedidoToQueue")

  // üëá lado inverso de PlayerState.queue
  playerState PlayerState?
}

model PlayerState {
  id             Int       @id @default(autoincrement())
  currentQueueId Int?      @unique
  isPlaying      Boolean   @default(false)
  progressMs     Int       @default(0)
  updatedAt      DateTime  @updatedAt

  queue          PlaybackQueue? @relation(fields: [currentQueueId], references: [id])
}

enum PedidoStatus {
  PENDENTE
  APROVADO
  REJEITADO
}

enum QueueStatus {
  NA_FILA
  TOCANDO
  TOCADA
  PULADA
}

model Moderador {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  senha    String
  criadoEm DateTime @default(now())
}