{
  "compilerOptions": {
    /* --- Compatibilidade com Node.js e ESModules --- */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    /* --- Caminhos do projeto --- */
    "rootDir": "./src",
    "outDir": "./dist",

    /* --- Suporte a decorators (seus controllers usam) --- */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* --- Emitir arquivos adicionais --- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* --- Regras de type-checking --- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    /* --- Remove avisos de depreciação (incluindo node10) --- */
    "ignoreDeprecations": "6.0"
  },

  /* --- Arquivos que TS deve compilar --- */
  "include": ["src/**/*"],

  /* --- Arquivos ignorados --- */
  "exclude": [
    "node_modules",
    "dist",
    "prisma.config.ts"
  ]
}