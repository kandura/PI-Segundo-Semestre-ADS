generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id            Int            @id @default(autoincrement())
  nome          String
  criadoEm      DateTime       @default(now())
  musicRequests PedidoMusica[]
}

model Mesa {
  id        Int             @id @default(autoincrement())
  codigo    String          @unique
  nome      String?
  ativa     Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  sessoes   SessaoCliente[]
}

model SessaoCliente {
  id             Int       @id @default(autoincrement())
  nomeCliente    String
  mesaId         Int
  ip             String?
  userAgent      String?
  status         String    @default("ATIVA")
  createdAt      DateTime  @default(now())
  lastActivityAt DateTime  @default(now())
  endedAt        DateTime?
  mesa           Mesa      @relation(fields: [mesaId], references: [id])
}

model SpotifyAuth {
  id              Int      @id @default(autoincrement())
  accessToken     String
  refreshToken    String   @unique
  expiresAt       DateTime
  tokenObtainedAt DateTime @default(now())
  createdAt       DateTime @default(now())
}

model Music {
  id        Int            @id @default(autoincrement())
  titulo    String
  artista   String
  genero    String
  createdAt DateTime       @default(now())
  pedidos   PedidoMusica[]
}

model PedidoMusica {
  id        Int          @id @default(autoincrement())
  clienteId Int
  musicId   Int
  mesaId    Int
  status    PedidoStatus @default(PENDENTE)
  createdAt DateTime     @default(now())
  cliente   Cliente      @relation(fields: [clienteId], references: [id])
  music     Music        @relation(fields: [musicId], references: [id])
}

enum PedidoStatus {
  PENDENTE
  APROVADO
  REJEITADO
}

model Moderador {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  senha    String
  criadoEm DateTime @default(now())
}
